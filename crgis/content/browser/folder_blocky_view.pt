<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="crgis.content">
<body>

<metal:content-core fill-slot="content-core">
<metal:block use-macro="context/@@listing_view/macros/content-core">

  <metal:entries fill-slot="entries">
    <metal:block use-macro="context/@@listing_view/macros/entries"
        tal:define="batch python:context.restrictedTraverse('@@contentlisting')(portal_type='Folder');
                    portal context/@@plone_portal_state/portal;
                    image_scale portal/@@image_scale">
      <metal:entry fill-slot="entry">

        <article style="float: left; position: relative; overflow: hidden; height: 122px; width: 202px; margin: 10px; padding: 0 6px 0 9px; text-align: center; background: #fff"
         tal:define="multiline python: len(item_title) > 15;">

          <h2 class="tileHeadline" style="height: 80px"
           tal:condition="multiline"
           tal:attributes="style string: margin-top: 25px;">
            <a class="summary url"
                tal:attributes="href item_link;
                                title python: item_description or item_title"
                tal:content="item_title">
              Item Title
            </a>
          </h2>
          <h2 class="tileHeadline" style="height: 80px"
           tal:condition="python: not multiline"
           tal:attributes="style string: margin-top: 40px;">
            <a class="summary url"
                tal:attributes="href item_link;
                                title python: item_description or item_title"
                tal:content="item_title">
              Item Title
            </a>
          </h2>

          <div class="visualClear"><!-- --></div>

        </article>

      </metal:entry>
    </metal:block>
  </metal:entries>

</metal:block>
</metal:content-core>

</body>
</html>
